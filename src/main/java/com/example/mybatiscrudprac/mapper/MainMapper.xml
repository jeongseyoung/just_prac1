<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.mybatiscrudprac.mapper.MainMapper">
    <insert id="userAdd" parameterType="com.example.mybatiscrudprac.domain.UserDto">
        INSERT INTO user(userId, userName, userEmail)
        values(#{user.userId},#{user.userName},#{user.userEmail})
    </insert>

    <select id="getuserlist" resultType="UserDto">
      select userId, userName, userEmail
      FROM user
      ORDER BY userId DESC
      LIMIT #{size} 
      OFFSET #{offset}
    </select>

    <select id="getTotalCount" resultType="long">
      SELECT COUNT(*)
      FROM user
    </select>
</mapper>